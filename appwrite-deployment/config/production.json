{
  "server": {
    "port": 8080,
    "host": "0.0.0.0",
    "max_connections": 1000,
    "request_timeout": 30000,
    "cors": {
      "enabled": true,
      "origins": ["https://cloud.appwrite.io", "https://your-domain.com"],
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "headers": ["Content-Type", "Authorization", "X-Appwrite-Project"]
    }
  },
  "database": {
    "appwrite": {
      "endpoint": "https://cloud.appwrite.io/v1",
      "project_id": "arbitrage-detection-engine",
      "database_id": "arbitrage-db",
      "api_key": "${APPWRITE_API_KEY}"
    }
  },
  "exchanges": {
    "okx": {
      "websocket_url": "wss://ws.okx.com:8443/ws/v5/public",
      "api_url": "https://www.okx.com/api/v5",
      "rate_limit": 20,
      "reconnect_delay": 1000
    },
    "binance": {
      "websocket_url": "wss://stream.binance.com:9443/ws",
      "api_url": "https://api.binance.com/api/v3",
      "rate_limit": 10,
      "reconnect_delay": 1000
    },
    "bybit": {
      "websocket_url": "wss://stream.bybit.com/realtime",
      "api_url": "https://api.bybit.com/v2",
      "rate_limit": 10,
      "reconnect_delay": 1000
    }
  },
  "trading": {
    "symbols": ["BTCUSDT", "ETHUSDT", "ADAUSDT", "BNBUSDT", "SOLUSDT"],
    "min_profit_threshold": 0.1,
    "max_risk_threshold": 0.3,
    "position_size_limit": 10000,
    "max_positions": 5
  },
  "risk_management": {
    "var_confidence": 0.95,
    "max_drawdown": 0.05,
    "stop_loss": 0.02,
    "take_profit": 0.01,
    "correlation_threshold": 0.8
  },
  "monitoring": {
    "metrics_interval": 5000,
    "health_check_interval": 30000,
    "log_level": "info",
    "performance_tracking": true
  },
  "security": {
    "api_key_rotation": true,
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 1000,
      "burst_size": 100
    },
    "ip_whitelist": []
  }
}
